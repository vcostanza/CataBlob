<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_large">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/button"
            android:layout_width="@dimen/button_large"
            android:layout_height="@dimen/button_large"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical"
            android:gravity="center"
            style="@style/Widget.AppCompat.Button">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/icon"
                android:layout_width="@dimen/thumb_medium"
                android:layout_height="@dimen/thumb_medium"
                android:padding="@dimen/margin_small"
                android:tint="@color/text_title"
                tools:src="@drawable/ic_gallery"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/placeholder_name"
                android:textSize="@dimen/text_medium"
                android:textColor="@color/text_title"
                android:maxLines="1"
                android:ellipsize="end"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>